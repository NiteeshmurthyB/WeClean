<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:id="@+id/txt_complaintaddress"
            android:layout_marginVertical="5dp"
            android:textStyle="bold"
            android:textColor="@color/white" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Latitude"
            android:id="@+id/txt_latitute"
            android:layout_below="@+id/txt_complaintaddress"
            android:textColor="@color/white"
            android:layout_marginVertical="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Longitude"
            android:id="@+id/txt_longitude"
            android:layout_below="@+id/txt_latitute"
            android:textColor="@color/white"
            android:layout_marginVertical="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status : "
            android:id="@+id/txt_adminStatus"
            android:layout_below="@id/txt_longitude"
            android:textColor="@color/white"
            android:layout_marginVertical="5dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>